# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# App pages
GET     /                                   controllers.ApplicationController.index
GET     /restricted                         controllers.ApplicationController.restricted

GET     /profile                            controllers.ApplicationController.profile

# Public auth pages
GET     /login                              controllers.AuthController.login
POST    /login                              controllers.AuthController.doLogin

GET     /logout                             com.feth.play.module.pa.controllers.AuthenticateDI.logout
GET     /authenticate/:provider             com.feth.play.module.pa.controllers.AuthenticateDI.authenticate(provider: String)

GET     /signup                             controllers.AuthController.signup
POST    /signup                             controllers.AuthController.doSignup

GET     /accounts/unverified                controllers.AuthController.unverified
GET     /authenticate/:provider/denied      controllers.AuthController.oAuthDenied(provider: String)

GET     /accounts/verify/:token             controllers.AuthController.verify(token: String)
GET     /accounts/exists                    controllers.AuthController.exists

GET     /accounts/password/reset/:token     controllers.AuthController.resetPassword(token: String)
POST    /accounts/password/reset            controllers.AuthController.doResetPassword

GET     /login/password/forgot              controllers.AuthController.remindPassword(email: String ?= "")
POST    /login/password/forgot              controllers.AuthController.doRemindPassword

GET     /assets/javascript/routes.js        controllers.AuthController.jsRoutes

# User specific pages
GET    /accounts/password/change            controllers.AccountController.changePassword
POST   /accounts/password/change            controllers.AccountController.doChangePassword

GET     /accounts/verify                    controllers.AccountController.verifyEmail

GET     /accounts/add                       controllers.AccountController.link

GET     /accounts/link                      controllers.AccountController.askLink
POST    /accounts/link                      controllers.AccountController.doLink

GET     /accounts/merge                     controllers.AccountController.askMerge
POST    /accounts/merge                     controllers.AccountController.doMerge

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
